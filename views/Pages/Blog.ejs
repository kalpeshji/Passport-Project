<%- include('../Partials/Header.ejs') %>
    <div class="container bg-dark1 rounded-3 p-3 d-flex justify-content-between mt-4">
        <h4 class="text-light">BLOG</h4>
        <div class="d-flex">
            <a href="/addblog" class="btn btn-primary me-1">Add Blog</a>
            <a id="logout" class="btn btn-primary ms-1">Log Out</a>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row g-3">
            <% if(blog && blog.length> 0){ %>
                <% blog.forEach(function(user) { %>
                    <div class="col-xl-3 col-lg-4 col-sm-6 text-light">
                        <div class="box bg-dark1 rounded-4 p-3">
                            <div class="d-flex justify-content-center overflow-hidden rounded-2">
                                <img width="100%" height="200px" src="<%= user.blogImage %>" alt="" class="rounded-3">
                            </div>
                            <h4 class="mt-3 fs-5 fw-bold  colr">
                                <%= user.title %>
                            </h4>
                            <p class="text-light text ">
                                <%= user.description %>
                            </p>
                            <div class="d-flex justify-content-between text-primary fs">
                                <p>by <%= user.createdBy %>
                                </p>
                                <p>
                                    <%= user.createdAt ? user.createdAt.toLocaleString() : 'Unknown' %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="alert alert-light mx-auto my-5 text-center" role="alert">No blogs!</div>
                            <% } %>
        </div>
    </div>
    <%- include('../Partials/Footer.ejs') %>